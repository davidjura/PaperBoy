<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAccent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/txtTitle"
        android:textSize="30dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@+id/imgArticle"
        android:layout_alignLeft="@+id/imgArticle"
        android:layout_alignStart="@+id/imgArticle"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/imgArticle"
        android:scaleType="centerCrop"
        android:layout_below="@+id/imgPublisher"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/txtInfo"
        android:textStyle="italic"
        android:textColor="@color/colorPrimaryDark"
        android:alpha="0.5"
        android:gravity="center_vertical|center_horizontal"
        android:layout_alignTop="@+id/imgPublisher"
        android:layout_toRightOf="@+id/imgPublisher"
        android:layout_toEndOf="@+id/imgPublisher"
        android:layout_above="@+id/imgArticle"
        android:layout_marginLeft="16dp" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:id="@+id/imgPublisher"
        android:src="@drawable/breitbart"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/imgArticle"
        android:layout_alignStart="@+id/imgArticle"
        android:layout_marginTop="16dp" />

</RelativeLayout>
